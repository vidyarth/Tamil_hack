  <h1>கடையின் விவரங்கள் : </h1>
 <div class="card">
    <div className="addprod">
        <form action="/shop/add/ok" method="post" name="form">
          <div>
            <label for="NameEn"><span style="color:rgb(131, 131, 255)">Shop Name </span>(In English): </label>
            <input type="text" name="shopNameEnglish" id="shopNameEnglish" required />
          </div>
          <div>
            <label><span style="color:rgb(131, 131, 255)">Do you want to autotranslate ?</span>
              &nbsp;<input type="radio" name="translate" value="YES" id="yes"><large style="color: rgb(233, 66, 233);">&nbsp; Yes</large> 
              &nbsp;<input type="radio" name="translate" value="NO" id="no"><large style="color: rgb(233, 66, 233)">&nbsp; No</large>  </label>
          </div>
          <div>
            <label for="NameTa"><span style="color:rgb(131, 131, 255)">Shop Name </span> (In Tamil):
              <span id="hide">(Auto translated) </span>
            </label>
            <div class="hideform">
              <input type="text" name="shopNameTamil" id="NameTa"/>
            </div>
          </div>
          <div>
            <label for="AddrTa"><span style="color:rgb(131, 131, 255)">Shop Phone </span> </label>
            <input type="mobile" name="shopPhone" id="AddrTa" required />
          </div>
          <div id="flexbuttons">
            <input type="submit" value="Submit" name="submit" id="Submit" class="button" /><br>
          </div>   
          </form>
      </div>
  </div>


  <script>
    var radios = document.forms["form"].elements["translate"];
    radios[0].onclick = function() {
        document.forms["form"].elements["NameTa"].value = "Field will be auto translated !";
        document.getElementById("hide").style.display = "inline-block";
        document.forms["form"].elements["NameTa"].readOnly = true;
        document.forms["form"].elements["NameTa"].required = false;
        document.forms["form"].elements["submit"].value = "Translate";
    }
    radios[1].onclick = function() {
        document.forms["form"].elements["NameTa"].value = "";
        document.getElementById("hide").style.display = "none";
        document.forms["form"].elements["NameTa"].readOnly = false;
        document.forms["form"].elements["NameTa"].required = true;
        document.forms["form"].elements["submit"].value = "Submit";
    }
</script>